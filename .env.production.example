# ADA.SEA Production Environment Configuration
# Copy to .env.production and fill in actual values

# Application
APP_NAME="ADA.SEA Production"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false
SECRET_KEY="CHANGE_THIS_TO_SECURE_RANDOM_KEY"

# API
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=8

# Database - PostgreSQL
POSTGRES_HOST="postgres-production.ada.sea"
POSTGRES_PORT=5432
POSTGRES_USER="ada_sea_user"
POSTGRES_PASSWORD="CHANGE_THIS_SECURE_PASSWORD"
POSTGRES_DB="ada_sea_production"
DATABASE_URL="postgresql://ada_sea_user:CHANGE_THIS_SECURE_PASSWORD@postgres-production.ada.sea:5432/ada_sea_production"

# Redis
REDIS_HOST="redis-production.ada.sea"
REDIS_PORT=6379
REDIS_PASSWORD="CHANGE_THIS_REDIS_PASSWORD"
REDIS_URL="redis://:CHANGE_THIS_REDIS_PASSWORD@redis-production.ada.sea:6379/0"

# Neo4j
NEO4J_HOST="neo4j-production.ada.sea"
NEO4J_PORT=7687
NEO4J_USER="neo4j"
NEO4J_PASSWORD="CHANGE_THIS_NEO4J_PASSWORD"
NEO4J_URL="bolt://neo4j:CHANGE_THIS_NEO4J_PASSWORD@neo4j-production.ada.sea:7687"

# Anthropic Claude API
ANTHROPIC_API_KEY="sk-ant-CHANGE_THIS"
CLAUDE_MODEL="claude-sonnet-4-5-20250929"

# Privacy & Security
PRIVACY_EDGE_ONLY_MODE=true
PRIVACY_CLOUD_SYNC_ENABLED=false
PRIVACY_CAPTAIN_AUTH_REQUIRED=true
PRIVACY_ENCRYPTION_ALGORITHM="AES-256-GCM"
PRIVACY_AUDIT_LOG_ENCRYPTION=true
PRIVACY_ZERO_KNOWLEDGE_BACKUP=true

# Marina API Endpoints
WEST_ISTANBUL_MARINA_API="https://api.west-istanbul-marina.com"
YALIKAVAK_MARINA_API="https://api.yalikavak-marina.com"

# Weather Service
WEATHER_API_ENDPOINT="https://api.weather.ada.sea"
WEATHER_ANONYMOUS_MODE=true

# VHF Radio
VHF_CHANNEL=72
VHF_FREQUENCY="156.625"
VHF_SUPPORTED_LANGUAGES="tr,en,el"

# Marina Configuration
MARINA_NAME="West Istanbul Marina"
TOTAL_BERTHS=600
MARINA_LOCATION="41.0082° N, 28.9784° E"
MARINA_TIMEZONE="Europe/Istanbul"

# Compliance
WIM_REGULATION_VERSION="2025-v1"
COMPLIANCE_THRESHOLD=0.98
KVKK_ENABLED=true
GDPR_ENABLED=true
DATA_CONTROLLER_NAME="Ada.sea Platform"
DATA_CONTROLLER_CONTACT="privacy@ada.sea"
DPO_EMAIL="veri-sorumlusu@ada.sea"

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD="CHANGE_THIS_GRAFANA_PASSWORD"
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_ROTATION="daily"
LOG_RETENTION_DAYS=90

# Security
SSL_CERT_PATH="/etc/ssl/certs/ada-sea.crt"
SSL_KEY_PATH="/etc/ssl/private/ada-sea.key"
MTLS_ENABLED=true
CORS_ORIGINS="https://ada.sea,https://west-istanbul-marina.com"

# Backup
BACKUP_ENABLED=false  # Zero-knowledge backup, disabled by default
BACKUP_ENDPOINT="https://backup.ada.sea/v1"
BACKUP_ENCRYPTION_REQUIRED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Performance
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_MAX_OVERFLOW=40
QUERY_TIMEOUT=30
REQUEST_TIMEOUT=60

# Turkish Language Support
DEFAULT_LANGUAGE="tr"
SUPPORTED_LANGUAGES="tr,en,el"
